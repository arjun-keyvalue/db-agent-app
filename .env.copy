DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=library
DB_USER=postgres
DB_PASSWORD=postgres

OPENAI_API_KEY=your_actual_openai_api_key_here

# RAG Agent Configuration
RAG_API_KEY=your_rag_api_key_here
RAG_MODEL=gpt-4o-mini
RAG_PROVIDER=openai
LANCEDB_PATH=./lancedb_rag
MAX_CORRECTIONS=3
QUERY_TIMEOUT=30

# Embedding Configuration (for vector search)
EMBEDDING_PROVIDER=ollama
EMBEDDING_MODEL=nomic-embed-text
AUTO_INDEX_SCHEMA=true
OLLAMA_BASE_URL=http://localhost:11434

# Alternative API Keys (uncomment and use as needed)
GROQ_API_KEY=your_groq_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Easy Model Switching Examples:
# Fast models (Groq): RAG_MODEL=llama-3.1-8b-instant, RAG_PROVIDER=groq
# Powerful models (OpenAI): RAG_MODEL=gpt-4o, RAG_PROVIDER=openai  
# Local models (Ollama): RAG_MODEL=llama3.1, RAG_PROVIDER=ollama
# Long context (Gemini): RAG_MODEL=gemini-1.5-pro, RAG_PROVIDER=gemini
# Anthropic: RAG_MODEL=claude-3-5-sonnet-20241022, RAG_PROVIDER=anthropic

# Embedding Provider Options:
# Local Ollama (recommended): EMBEDDING_PROVIDER=ollama, EMBEDDING_MODEL=nomic-embed-text
# OpenAI (high quality): EMBEDDING_PROVIDER=openai, EMBEDDING_MODEL=text-embedding-3-small
# HuggingFace (free): EMBEDDING_PROVIDER=huggingface, EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
